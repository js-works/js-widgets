{
  "compilerOptions": {
    "target": "ES5",
    "strict": true,
    "strictNullChecks": true,
    "jsx": "react",
    "jsxFactory": "createElement",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es7", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    
    "paths": {
      "js-widgets": ["src/modules/core/main/index.ts"],
    },
    
    "typeRoots": [
      "node_modules/@types"
    ],

    "types": [
      "node", "mocha", "chai"
    ]
  },
  "files": [
    "src/modules/core/main/index.ts",
    "src/modules/dom/main/index.ts",
    "src/modules/html/main/index.ts",
    "src/modules/svg/main/index.ts",
    "src/modules/handlers/main/index.ts",
    "src/modules/hooks/main/index.ts",
    "src/modules/util/main/index.ts"
  ],

  "include": [
		"./src/modules/*/main/**/*.ts*"
  ],
}
