{
  "compilerOptions": {
    "target": "ES2015",
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "baseUrl": ".",
    
    "paths": {
      "js-scenery": ["src/modules/core/main/index.ts"],
    },
    
    "typeRoots": [
      "node_modules/@types"
    ],

    "types": [
      "node", "mocha", "chai"
    ]
  },
  "files": [
    "src/modules/core/main/index.ts",
    "src/modules/adapt-react/main/index.ts",
  ],

  "include": [
		"./src/**/*.ts*"
  ],
}
